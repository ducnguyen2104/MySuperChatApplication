<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="conversationViewModel"
            type="com.ducnguyenvan.mysuperchatapplication.Conversation.ConversationViewModel"/>
    </data>
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conversation_toolbar"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{conversationViewModel.converrsationName}"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:id="@+id/conversation_name"/>
    </Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/conversation_rv"
        android:layout_below="@+id/conversation_toolbar"
        android:layout_above="@+id/conversation_enter_text">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:background="@android:color/holo_blue_light"
        android:id="@+id/conversation_enter_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Bấm để nhập tin nhắn"
            android:id="@+id/conversation_edt"
            android:text="@={conversationViewModel.message}"/>

        <Button
            android:id="@+id/conversation_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> conversationViewModel.onSendBtnClicked()}"
            android:text="➠"
            android:textSize="24sp"/>
    </LinearLayout>

</RelativeLayout>
</layout>